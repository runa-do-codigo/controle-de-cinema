@model VisualizarSessoesViewModel;

@{
    ViewBag.Titulo = "Visualização de Sessões";

    var notificacao = ViewData[nameof(NotificacaoViewModel)] as NotificacaoViewModel;
}

<p>
    <a class="btn btn-primary px-4" asp-action="Cadastrar" data-se="btnCadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

@if (notificacao is not null)
{
    <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
        <h6>@notificacao.Titulo</h6>
        @notificacao.Mensagem
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (User.IsInRole("Cliente"))
{
    var ingressos = ViewData["Ingressos"] as List<DetalhesIngressoViewModel>;

    @if (ingressos is not null)
    {
        <h5 class="mb-3">Meus ingressos</h5>

        <div class="row g-2 mb-3">
            @foreach (var ingresso in ingressos)
            {
                <div class="col-md-3 d-flex">
                    <div class="card flex-fill">
                        <div class="card-body d-flex flex-column">

                            <a asp-action="Detalhes" asp-route-id="@ingresso.SessaoId" class="text-decoration-none">
                                <div class="d-flex justify-content-between">
                                    <h6 class="card-title text-primary">@ingresso.Inicio.ToString("dd/MM/yy HH:ss")</h6>

                                    @if (ingresso.MeiaEntrada)
                                    {
                                        <p class="card-text">
                                            <span class="fw-semibold text-primary">Meia Entrada</span>
                                        </p>
                                    }
                                </div>

                                <div class="d-flex justify-content-between text-light">
                                    <p class="card-text mb-0">
                                        <span class="fw-semibold">Sala:</span> #@ingresso.Sala
                                    </p>

                                    <p class="card-text mb-0">
                                        <span class="fw-semibold">Assento:</span> #@ingresso.Assento
                                    </p>
                                </div>

                                <p class="card-text text-light">
                                    <span class="fw-semibold">Filme:</span> @ingresso.Filme
                                </p>
                            </a>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <hr />
}

<h5 class="mb-3">Sessões disponíveis</h5>

<div class="row g-1">
    @foreach (var registro in Model.Registros)
    {
        <div class="col-12 col-md-3 d-flex">
            <div class="card border-0 flex-fill">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Sessão para @registro.Filme</h5>

                    <p class="card-text mb-0">
                        <span class="fw-semibold">Início:</span> @registro.Inicio.ToString()
                    </p>

                    <p class="card-text mb-0">
                        <span class="fw-semibold">Número de Ingressos:</span> @registro.MaxIngressos
                    </p>

                    <p class="card-text">
                        <span class="fw-semibold">Status:</span> @(registro.Encerrada ? "Encerrada" : "Aberta")
                    </p>

                    <div class="mt-auto d-flex gap-1 justify-content-end">

                        <a asp-action="Detalhes" asp-route-id="@registro.Id" class="btn btn-secondary rounded-circle card-option" title="Detalhes">
                            <i class="bi bi-search"></i>
                        </a>
                        
                        @if (User.IsInRole("Empresa"))
                        {
                            <a asp-action="Editar" asp-route-id="@registro.Id" class="btn btn-primary rounded-circle card-option" title="Edição">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            @if (registro.Encerrada)
                            {
                                <a asp-action="Excluir" asp-route-id="@registro.Id" class="btn btn-danger rounded-circle card-option" title="Exclusão">
                                    <i class="bi bi-trash"></i>
                                </a>
                            }
                            else
                            {
                                <a asp-action="Encerrar" asp-route-id="@registro.Id" class="btn btn-danger rounded-circle card-option" title="Encerrar">
                                    <i class="bi bi-calendar-x"></i>
                                </a>
                            }
                        }
                        else if (User.IsInRole("Cliente"))
                        {
                            <a asp-controller="Ingresso" asp-action="ComprarIngresso" asp-route-sessaoId="@registro.Id" class="btn btn-success rounded-circle card-option" title="Comprar Ingresso">
                                <i class="bi bi-ticket-perforated"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>