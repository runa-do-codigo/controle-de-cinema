@model EditarSessaoViewModel;

@{
    ViewBag.Titulo = "Edição de Sessão";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Editar" asp-route-id="@Model.Id">
                    <h3>Formulário de Edição</h3>

                    <partial name="_ValidationAlert"></partial>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Inicio" class="control-label fs-5">Início:</label>
                        <input asp-for="Inicio" class="form-control" data-se="InputInicio" />
                        <span asp-validation-for="Inicio" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="NumeroMaximoIngressos" class="control-label fs-5">Número Máx. de Ingressos:</label>
                        <input asp-for="NumeroMaximoIngressos" class="form-control" type="number" min="0" data-se="InputNumeroMaximoIngressos" />
                        <span asp-validation-for="NumeroMaximoIngressos" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="FilmeId" class="control-label fs-5">Filme:</label>
                        <select asp-for="FilmeId" asp-items="@Model.FilmesDisponiveis" class="form-control"></select>
                        <span asp-validation-for="FilmesDisponiveis" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="SalaId" class="control-label fs-5">Sala:</label>
                        <select asp-for="SalaId" asp-items="@Model.SalasDisponiveis" class="form-control"></select>
                        <span asp-validation-for="SalaId" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a asp-action="Index">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5" data-se="btnConfirmar">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}