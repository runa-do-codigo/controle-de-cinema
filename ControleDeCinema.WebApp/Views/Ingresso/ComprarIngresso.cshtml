@model ComprarIngressoViewModel;

@{
    ViewBag.Titulo = "Compra de Ingresso";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="ComprarIngresso">
                    <h3>Formulário de Cadastro</h3>

                    <partial name="_ValidationAlert"></partial>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Filme" class="control-label fs-5">Filme:</label>
                        <input asp-for="Filme" class="form-control" disabled readonly data-se="ImputFilme" />
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Sala" class="control-label fs-5">Sala:</label>
                        <input asp-for="Sala" class="form-control" disabled readonly data-se="ImputSala"/>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Assento" class="control-label fs-5">Assento:</label>
                        <select asp-for="Assento" asp-items="@Model.AssentosDisponiveis" class="form-select"></select>
                        <span asp-validation-for="Assento" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <div class="form-check">
                            @Html.CheckBoxFor(x => x.MeiaEntrada, new { @class = "form-check-input" })
                            <label asp-for="MeiaEntrada" class="form-check-label">Meia Entrada</label>
                        </div>
                        <span asp-validation-for="MeiaEntrada" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a asp-controller="Sessao" asp-action="Index">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5" data-se="btnConfirmar">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}